 <style>
    .product-sort{
        display: flex;
        justify-content: end;
        margin-right: 10rem;
        height: 2.5rem;
    }
    .product-sort select{
        width: 20%;
        background: white;
        /* color: #fefeeb; */
        border-radius: 5px;
    }
    .product-icon{
        font-size: 1.5rem;

     
        
    }
    .product-product img{
        width: 10rem;
    }
 
    .product-new-arrival{ 
    top: 0;
    left: 0;
    background-color: rgb(248, 180, 7);
    background-color: rgb(252, 171, 58);
    color: white;
    width: 6rem;

    }
