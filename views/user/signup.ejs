<style>
    /* ------------main body------------- */

    html {
        font-size: 16px;
        /* Base font size */
    }

    .home-main-container {
        font-family: Arial, sans-serif;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .home-container {
        display: flex;
        width: 80%;
        max-width: 75rem;
        /* 1200px */
        background-color: #000;
        border-radius: 0.625rem;
        /* 10px */
        overflow: hidden;
        margin-top: 2rem;
    }

    .home-left {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #000;
    }

    .home-image {
        max-width: 100%;
        height: auto;
    }

    .home-right {
        flex: 1;
        padding: 2.5rem;
        /* 40px */
        background-color: #000;
    }

    .home-title {
        margin-bottom: 1.875rem;
        /* 30px */
        font-size: 1.5rem;
        /* 24px */
        font-weight: bold;
    }

    .home-form {
        display: flex;
        flex-direction: column;
    }

    .home-input {
        margin-bottom: 0.9375rem;
        /* 15px */
        padding: 0.625rem;
        /* 10px */
        border: none;
        border-radius: 0.3125rem;
        /* 5px */
        font-size: 1rem;
        /* 16px */
        color: #fff;
        /* Text color inside the input */
        background-color: #232323;
        /* Background color of the input */
    }


    .home-checkbox-container {
        display: flex;
        align-items: center;
        margin-bottom: 1.25rem;
        /* 20px */
    }

    .home-checkbox {
        margin-right: 0.625rem;
        /* 10px */
    }

    .home-checkbox-label {
        font-size: 0.875rem;
        /* 14px */
    }

    .home-button {
        padding: 0.9375rem;
        /* 15px */
        background-color: #ff6600;
        color: #fff;
        border: none;
        border-radius: 0.3125rem;
        /* 5px */
        font-size: 1rem;
        /* 16px */
        cursor: pointer;
    }

    .home-button:hover {
        background-color: #e65c00;
    }

    /* Responsive Styles */
    @media (max-width: 48rem) {

        /* 768px */
        .home-container {
            flex-direction: column;
        }

        .home-left,
        .home-right {
            flex: none;
            width: 100%;
        }

        .home-right {
            padding: 1.25rem;
            /* 20px */
        }
    }

    .password-container {
    position: relative;
}

    .password-input {
        width: 100%;
        padding-right: 2.5rem;
        /* Space for the eye icon */
        box-sizing: border-box;
    }

    

    .home-input {
    position: relative;
    margin-bottom: 1rem;
    padding: 0.9375rem 1.25rem;
    border: 1px solid #f0ffff;
    font-size: 1rem;
    color: #fff;
    background-color: transparent;
    transition: 0.2s ease;
    width: 100%;
    height: 2.75rem;
}

.home-input:focus,
.home-input:not(:placeholder-shown) {
    /* color: #66ff00; */
    /* border-color: #66ff00; */
}

.home-form {
    position: relative;
}

.home-form .input-label {
    position: absolute;
    left: 1.25rem; /* 20px */
    top: 13%; /* 18px */
    font-size: 1rem; /* 16px */
    color: #f0ffff;
    background-color: #000;
    padding: 0 0.3125rem; /* 0 5px */
    transition: 0.2s ease;
    pointer-events: none;
}

