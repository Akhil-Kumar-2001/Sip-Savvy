    position: relative;
}

.toggle-password {
    position: absolute;
    right: 1.25rem; /* 20px */
    top: 38%;
    transform: translateY(-50%);
    cursor: pointer;
    color: #f0ffff;
    z-index: 2;
}

.home-input:focus ~ .toggle-password,
.home-input:not(:placeholder-shown) ~ .toggle-password {
