            width: 100%;
            text-align: center;
        }

        .reset-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .reset-container p {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #000;
            border-radius: 5px;
            background-color: #ffd1d1;
            color: #000;
        }

        .form-control:focus {
            border-color: #fff;
