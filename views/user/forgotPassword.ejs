        .reset-main{
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .reset-container {
          
            background-color: black;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px black;
