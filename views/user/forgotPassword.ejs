            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
        }

        .submit-btn:hover {
            background-color: #555;
            color: #fff;
        }

        @media (max-width: 480px) {
            .reset-container {
                padding: 15px;
            }

            .reset-container h1 {
                font-size: 20px;
            }

            .reset-container p {
                font-size: 14px;
            }

            .submit-btn {
                font-size: 14px;
            }
        }
