        <!-- Slide-in Page HTML -->
        <div class="slide-page">
            <div class="slide-content">
                <a href="/home">
                    <i class="bi bi-house"></i> Home
                </a>
                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-list"></i> Category
                </a>
                <div class="dropdown-menu">
                    <a href="/allproduct?productCategory=667d78a7a879fcad2e04cdcb" class="dropdown-item">Whisky</a>
                    <a href="/allproduct?productCategory=667d94b30c7e022cab20948a" class="dropdown-item">Vodka</a>
                    <a href="/allproduct?productCategory=667e3e831728c0360822b7e2" class="dropdown-item">Rum</a>
                    <a href="/allproduct?productCategory=669b5c1755b0fb7308c0afe6" class="dropdown-item">Gin</a>
                    <a href="/allproduct?productCategory=667e3d3692b6ca3bb57c14d5" class="dropdown-item">Beer</a>
                    <!-- <a href="/allproduct" class="dropdown-item">All Product</a> -->
                </div>
                <a href="/allproduct">
                    <i class="bi bi-shop"></i> Shop
                </a>
                <a href="#">
                    <i class="bi bi-envelope"></i> Contact
                </a>
                <a href="/wishlist">
                    <i class="bi bi-heart-fill"></i> Wishlist
                </a>
                <a href="/cart">
                    <i class="bi bi-cart3"></i> Cart
                </a>
                <% if(user){ %>
                <a href="/profile">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <% }else{ %>
                <a href="/login">
                    <i class="bi bi-box-arrow-in-left"></i> Login
                </a>
                <% } %>
            </div>
        </div>
    </header>

    <script>
        // Existing slide-in menu toggle
        document.querySelector('.menu-icon').addEventListener('click', function() {
            document.querySelector('.slide-page').classList.toggle('active');
        });

        // Close the slide-in page when clicking outside of it
        document.addEventListener('click', function(event) {
            const slidePage = document.querySelector('.slide-page');
            const menuIcon = document.querySelector('.menu-icon');

            // Check if the click is outside the slide-in page and not on the menu icon
            if (!slidePage.contains(event.target) && !menuIcon.contains(event.target)) {
                slidePage.classList.remove('active');
            }
        });

        // Function to fetch and update cart and wishlist counts
        async function updateCounts() {
            const wishlistBadge = document.getElementById('wishlist-count');
            const cartBadge = document.getElementById('cart-count');
            
            try {
                // Fetch wishlist count
                const wishlistResponse = await fetch('/wishlist/count', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                if (!wishlistResponse.ok) {
                    throw new Error('Failed to fetch wishlist count');
                }
                const wishlistData = await wishlistResponse.json();
                if (wishlistData.count > 0) {
                    wishlistBadge.textContent = wishlistData.count;
                    wishlistBadge.style.display = 'flex';
                } else {
                    wishlistBadge.textContent = '';
                    wishlistBadge.style.display = 'none';
                }

                // Fetch cart count
                const cartResponse = await fetch('/cart/count', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                if (!cartResponse.ok) {
                    throw new Error('Failed to fetch cart count');
                }
                const cartData = await cartResponse.json();
                if (cartData.count > 0) {
                    cartBadge.textContent = cartData.count;
                    cartBadge.style.display = 'flex';
                }
            } catch (error) {
                console.error('Error fetching counts:', error);
            }
        }

        // Run updateCounts when the page loads
        document.addEventListener('DOMContentLoaded', updateCounts);
    </script>

    <%- include('alert') %>
</body>