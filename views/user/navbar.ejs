<body style="padding-top: 100px;">
    <style>
        /* Header */
        .home-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            z-index: 1;
            top: 0;
            left: 0;
            padding: 3px;
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            height: 100px;
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus {
            -webkit-text-fill-color: #fefeeb;
            transition: background-color 5000s ease-in-out 0s;
        }

        .dropdown a {
            color: #fefeeb;
            background: none;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: .5rem;
        }

        .dropdown-menu {
            background: #232323;
            border-radius: 10px;
        }

        .home-icon {
            width: 2rem;
            height: 2.2rem;
            font-size: 1.7rem;
        }

        .menu-icon {
            display: none; /* Hide menu icon by default */
        }

        /* Styling for count badges */
        .icon-wrapper {
            position: relative;
            display: inline-flex;
            align-items: center;
        }

        .count-badge {
            position: absolute;
            top: -5px; /* Adjust to position above and to the right of the icon */
            right: -10px; /* Adjust to position to the right of the icon */
            background-color: #DB4444;
            color: #fff;
            font-size: 0.8rem;
            font-weight: bold;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: none; /* Initially hidden */
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        /* Media query for devices with width <= 425px */
        @media (max-width: 430px) {
            /* Stack elements vertically */
            .home-header {
                flex-direction: row;
                align-items: flex-start;
                padding: 10px;
                height: auto;
            }
            .bi-search {
                display: none;
            }

            .home-logo img {
                width: 150px; /* Adjust logo size */
            }

            .home-search {
                width: 100%;
                margin-top: 17px;
            }
            .home-icons {
                margin-top: 16px;
            }
            .menu-icon {
                padding-left: 0.6rem;
            }

            .home-search input {
                width: 100%;
                box-sizing: border-box;
            }

            /* Adjust dropdown menu width */
            .dropdown-menu {
                width: 100%;
            }
        }

        /* Media query for small screens */
        @media (max-width: 768px) {
            /* Hide all elements except the search bar and the menu icon */
            .home-nav,
            .home-icons > :not(.menu-icon) {
                display: none;
            }

            /* Show the menu icon */
            .menu-icon {
                display: block;
            }

            /* Ensure the search bar is centered */
            .home-search {
                flex: 1;
                justify-content: center;
            }

            .home-header {
                padding: 0 10px;
            }
        }

        /* Responsive adjustments */
        @media (max-width: 993px) {
            .home-search {
                margin-left: 1rem;
            }

            .home-search input {
                max-width: 60%;
                height: 2.2rem;
            }

            .home-search input[type="text"] {
                padding: 8px;
                font-size: 0.9rem;
            }

            .im {
                font-size: 1.2rem;
                translate: 800% -83%;
            }

            .home-nav {
                display: none;
            }
        }

        @media (max-width: 1200px) {
            .home-search {
                margin-left: 1rem;
            }

            .home-search input {
                max-width: 285px;
                height: 2.2rem;
            }

            .home-search input[type="text"] {
                padding: 8px;
                font-size: 0.9rem;
            }

            .im {
                font-size: 1.2rem;
                translate: 800% -83%;
            }
        }

        /* Slide-in page default hidden state */
        .slide-page {
            position: fixed;
            top: 0;
            right: -100%; /* Hidden off the screen */
            height: 100%;
            width: 200px; /* Adjust width as needed */
            background-color: #000000;
            transition: right 0.3s ease-in-out;
            z-index: 2; /* Ensure it's above other elements */
            color: #fefeeb;
            padding: 20px;
        }

        /* Slide-in page when visible */
        .slide-page.active {
            right: 0; /* Slide it in */
        }

        /* Slide content styling */
        .slide-content a {
            display: block;
            padding: 10px 0;
            color: #fefeeb;
            text-decoration: none;
            font-size: 1.2rem;
        }

        .slide-content a:hover {
            color: #fff;
        }

        .slide-content .dropdown-menu {
            background-color: #000000;
            border-radius: 5px;
            padding: 10px;
            margin-left: 10px;
        }

        .slide-content .dropdown-item {
            padding: 5px 0;
            color: #fefeeb;
        }

        .slide-content .dropdown-item:hover {
            color: #fff;
        }
    </style>

    <!-- //---------header---------// -->
