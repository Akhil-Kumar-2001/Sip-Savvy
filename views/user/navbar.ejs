    /* Media query for small screens */
@media (max-width: 768px) {
    /* Hide all elements except the logo and the hamburger menu */
    .home-search,
    .home-nav,
    .home-icons > :not(.menu-icon) {
        display: none;
    }

    /* Show the hamburger menu icon */
    .home-icons .menu-icon {
        display: block;
    }

    /* Optional: Adjust header alignment */
    .home-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
    }  
}


/* Responsive adjustments */
@media (max-width: 993px) {

    .home-search {
        margin-left: 1rem;
       
    }
    .home-search input{
        max-width: 60%; /* Allow the search bar to take the full width of the smaller screen */
        height: 2.2rem;
    }

     .home-search input[type="text"] {
        padding: 8px;
        font-size: 0.9rem;
    } 
 
    .im {
        font-size: 1.2rem;
        translate: 800% -83%;
    } 
    .home-nav{
        display: none;
    }
    .home-icons{
   padding-left: 135px;
}
}
/* Responsive adjustments */
