/* Header */



input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus {
    -webkit-text-fill-color: #fefeeb;
    transition: background-color 5000s ease-in-out 0s;
}

.dropdown a {
    color: #fefeeb;
    background: none;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: .5rem;
}

.dropdown-menu {
    background: #232323;
    border-radius: 10px;
}

.home-icon {
    width: 2rem;
    height: 2.2rem;
    font-size: 1.7rem;
}

.menu-icon {
    display: none; /* Hide menu icon by default */
}

/* Media query for devices with width <= 425px */
@media (max-width: 430px) {
        /* Stack elements vertically */
        .home-header {
            flex-direction: row;
            align-items: flex-start;
            padding: 10px;
            height: auto;
        }
        .bi-search{
            display: none;
        }

        .home-logo img {
            width: 150px; /* Adjust logo size */
        }

        .home-search {
            width: 100%;
            margin-top: 17px;
        }
        .home-icons{
            margin-top: 16px;
            
            
        }
        .menu-icon{
            padding-left: 0.6rem;
        }

        .home-search input {
            width: 100%;
            box-sizing: border-box;
        }

        /* Adjust dropdown menu width */
        .dropdown-menu {
            width: 100%;
        }
    }

/* Media query for small screens */
@media (max-width: 768px) {
    /* Hide all elements except the search bar and the menu icon */
    
    .home-nav,
    .home-icons > :not(.menu-icon) {
        display: none;
    }

    /* Show the menu icon */
    .menu-icon {
        display: block;
    }

    /* Ensure the search bar is centered */
    .home-search {
        flex: 1;
        justify-content: center;
    }

    .home-headerr {
        padding: 0 10px;
    }
}

/* Responsive adjustments */
@media (max-width: 993px) {
    .home-search {
        margin-left: 1rem;
    }

    .home-search input {
        max-width: 60%;
        height: 2.2rem;
    }

    .home-search input[type="text"] {
        padding: 8px;
        font-size: 0.9rem;
    }

    .im {
        font-size: 1.2rem;
        translate: 800% -83%;
    }

    .home-nav {
        display: none;
    }

    /* .home-icons {
        padding-left: 135px;
    } */
}

@media (max-width: 1200px) {
    .home-search {
        margin-left: 1rem;
    }

    .home-search input {
        max-width: 285px;
        height: 2.2rem;
    }

    .home-search input[type="text"] {
        padding: 8px;
        font-size: 0.9rem;
    }

    .im {
        font-size: 1.2rem;
        translate: 800% -83%;
    }
}

