 <!-- shop section -->


 <style>
    .product-icon{
        font-size: 1.5rem;
        color: black;
     
        
    }
    .product-product img{
        width: 10rem;
    }
 
    .product-new-arrival{ 
    top: 0;
    left: 0;
    
    color: white;
    width: 6rem;

    }
    .product-image-size {
    width: 200px; /* Set the desired width */
    height: 250px; /* Set the desired height */
    object-fit: cover; /* Ensures the image covers the container without distortion */
}
    
 </style>

 <div class="home-container">
     <h1 class="home-title">Latest products</h1>
     <!-- <p class="home-all-products">See all  ></p> -->
     
    <div class="home-products" >
        <% let count = 0; %>

            <% products.forEach((product)=>{ const productAge =(Date.now() - new Date(product.createdAt).getTime()) / (24 * 60 * 60* 1000);
                if(productAge <= 30 && count < 8){ %>
                    <% count++; %>
             <div class="home-product" data-aos="zoom-in-right">
            <% if(productAge <= 30){ %>
                 <div class="product-new-arrival">
                      <h6 class="ms-1">New Arrival</h6>
                  </div>
             <% } else if (product.productDiscount != 0) { %>
                <div class="product-new-arrival">
                    <h6 class="ms-1">
                 <%= product.productDiscount %> &percnt; OFF
                    </h6>
                </div>
                 <% } %>
             
             <div class="product-image">
                 <a href="/productDetail/<%= product.id %>" class="product-name-link">
                     <img src="/<%= product.productImage[0] %>" class="product-image-size" alt="">
                 </a>
             </div>
            <p class="text-truncate  home-product-name">
                <%= product.productName %>
            </p>
            <p class="home-product-price">
                <i class="bi bi-currency-rupee"></i>
                <%= product.productPrice.toLocaleString() %>
            </p>
            <div class="home-cart-icon">

                <a onclick="addwishlist('<%= product.id %>', '<%= product.productPrice %>', '<%= user %>')" class="wishlist-icon">
                    <i class="bi bi-heart product-icon text-white"></i></a>
                <a onclick="addToCart('<%= product.id %>','<%= product.productPrice %>','<%=user %>')"
                    class="cart-icon"><i class="bi bi-cart-fill product-icon ms-3 text-white"></i></a>
                
            
            </div>
            
        </div>  
        <% } }) %>
    </div>
</div>
