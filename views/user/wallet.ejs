<style>
    .wallet-page {
        display: flex;
        justify-content: center;
        gap: 4rem;
        margin-top: 5rem;
    }

    .card {
        background-color: #000;
        border: none;
    }

    .user-profile-div {
        margin-bottom: 20px;
        height: 95%;
    }

    .card-sidebar {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
        box-shadow: 0 0 10px rgba(100, 98, 98, 0.5);
        border-radius: 5px;
    }

    .card-sidebar h2 {
        padding: 1.5rem;
        color: #fefeeb;
        display: flex;
        gap: 1rem;
    }

    .list-group {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .list-group-item {
        background: transparent;
        border: none;
        font-size: 1.1rem;
        border-radius: 5px;
    }

    .list-group-item:hover {
        background: #fff;
    }

    .list-group-item a {
        color: #fefeeb;
        text-decoration: none;
        display: flex;
        gap: 1rem;
    }

    .wallet-box {
        background: #000;
        color: #fefeeb;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border-radius: 5px;
        height: 100%;
        box-shadow: 0 0 10px rgba(100, 98, 98, 0.5);
        /* border-radius: 15px; */
    }

    .transaction {
        display: flex;
        justify-content: center;
    }

    .transaction-history {
        background: #000;
        color: #fefeeb;
        box-shadow: 0 0 10px rgba(100, 98, 98, 0.5);
        border-radius: 5px;
    }

    .transaction-history h1 {
        display: flex;
        justify-content: center;
        padding: 4rem;
    }

    .history-icon {
        font-size: 5rem;
    }

    .transaction-history {
        margin: 20px 0;
    }

    .transaction-head,
    .transaction-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .flex-row {
        flex: 1;
        text-align: center;
    }

    .transaction-head .flex-row {
        font-weight: bold;
    }

    .transaction-row {
        padding: 10px;
        margin-top: 10px;
    }

    .list-group-item:hover a {
        color: black;
    }
</style>

<%- include('navbar') %>
    <div class="container wallet-page">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-sidebar">
                    <h2><i class="bi bi-list"></i>Menu</h2>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="/profile"><i class="bi bi-person-fill"></i>Profile</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/orders"><i class="bi bi-tag"></i>My Orders</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/wallet"><i class="bi bi-wallet-fill"></i>Wallet</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/forgotpassword"><i class="bi bi-x-octagon"></i>Reset Password</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/logout"><i class="bi bi-box-arrow-right"></i>logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="wallet-box">
                <i class="bi bi-wallet-fill history-icon"></i>
                <h1>Your wallet</h1>
                <p>Available Balance
                <h3 class="text-danger">₹ <%= balance.toLocaleString()   %>
                </h3>
                </p>
            </div>
        </div>
    </div>
    <div class="transaction">
        <div class="col-lg-10">
            <div class="transaction-history">
                <h1>Transaction History</h1>
               
                    <div class="transaction-head">
                        
                        <div class="flex-row text-center">
                            <h6>Date</h6>
                        </div>
                        <div class="flex-row text-center">
                            <h6>Payment Method</h6>
                        </div>
                        <div class="flex-row text-center">
                            <h6>Order Id</h6>
                        </div>
                        <div class="flex-row text-center">
                            <h6>Status</h6>
                        </div>
                        <div class="flex-row text-center">
                            <h6>Amount</h6>
                        </div>
                    </div>
                    <% orders.forEach((order,index)=>{ %>
                        <div class="transaction-row">
                            <div class="flex-row text-center">
                                <p>
                                    <%= order.createdAt.toDateString() %>
                                </p>
                            </div>
                            <div class="flex-row text-center">
                                <p>
                                    <%= order.paymentMethod%>
                                </p>
                            </div>
                            <div class="flex-row text-center">
                                <h6><%= order.order_id %>
                                </h6>
                            </div>
                            <div class="flex-row text-center">
                                <b class="mb-0 mt-2 badge">
                                    <%= order.orderStatus %>
                                  </b>
                            </div>

                            <div class="flex-row text-center">
                                <h5>₹ <%= (order.totalPrice).toLocaleString() %>
                                </h5>
                            </div>
                        </div>
                        <% }); %>
                           
            </div>
        </div>
    </div>

    <%- include('footer') %>