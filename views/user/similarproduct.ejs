<!---------Similar products  --------->


 <div class="home-container">
     <h1 class="home-title"> Similar Products </h1>
     <!-- <p class="home-all-products">See all  ></p> -->
     
    <div class="home-products" data-aos="fade-left">
           <% for(let i = 0 ; i < similarProduct.length && i < 4 ; i++ ) { %>
             <div class="home-product">
                
            <div class="product-image">
                <a href="/productDetail/<%= similarProduct[i].id %>" class="product-name-link">
                    <img src="/../<%=similarProduct[i].productImage[0]  %>" class="product-image-size" alt="">
                </a>
            </div>

            <p class="home-product-name text-truncate">
                <%= similarProduct[i].productName %>
            </p>
            <p class="home-product-price">
                <i class="bi bi-currency-rupee"></i>
                <%= similarProduct[i].productPrice.toLocaleString() %>
            </p>
            <div class="home-cart-icon">
                <a onclick="addwishlist('<%= product.id %>', '<%= product.productPrice %>', '<%= user %>')" class="wishlist-icon">
                    <i class="bi bi-heart mt-3 product-icon"></i></a>
                    <a onclick="addToCart('<%= product.id %>','<%= product.productPrice %>','<%=user %>')"
                        class="cart-icon"><i class="bi bi-cart-fill product-icon ms-3 text-black"></i></a>
            
            </div>
            
        </div>  
        <% } %>
    </div>
</div>


